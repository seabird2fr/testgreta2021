{% extends 'base.html.twig' %}

{% form_theme form with ['bootstrap_4_layout.html.twig'] %}

	{% block title %}Modification du mot de passe{% endblock %}



		{% block body %}

			<div class="container mt-3" >


				<h1>Modification du mot de passe</h1>

				{{ form_start(form) }}
				
				{{form_row(form.oldPassword,{'label':false,'attr':{'placeholder':"Entrer l'ancien mot de passe"}})}}
				{{form_row(form.newPassword,{'label':false,'attr':{'placeholder':"Entrer le nouveau mot de passe"}})}}
				{{form_row(form.confirmNewPassword,{'label':false,'attr':{'placeholder':"Entrer la confirmation du mot de passe"}})}}
				
				<button type="submit" class="btn btn-success">Modification</button>
				{{ form_end(form) }}

			</div>	

		{% endblock %}