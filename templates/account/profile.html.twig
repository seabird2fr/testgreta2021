{% extends 'base.html.twig' %}

{% form_theme form with ['bootstrap_4_layout.html.twig'] %}

	{% block title %}Modification du profil{% endblock %}



		{% block body %}

			<div class="container mt-3" >


				<h1>Modification du profil de {{user.firstName}} {{user.lastName}}</h1>

				{{ form_start(form) }}
				
				{{form_row(form.email,{'label':false,'attr':{'placeholder':"Entrer votre email"}})}}
				{{form_row(form.picture,{'label':false,'attr':{'placeholder':"Entrer une url (avatar)"}})}}
				{{form_row(form.introduction,{'label':false,'attr':{'placeholder':"Entrer l'introduction"}})}}
				{{form_row(form.description,{'label':false,'attr':{'placeholder':"Entrer votre description"}})}}
			
				<button type="submit" class="btn btn-success">Modification</button>
				{{ form_end(form) }}

			</div>	

		{% endblock %}





