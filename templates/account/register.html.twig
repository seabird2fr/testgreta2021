{% extends 'base.html.twig' %}

{% form_theme form with ['bootstrap_4_layout.html.twig',_self] %}

	{% block title %}Inscription{% endblock %}



		{% block body %}

			<div class="container mt-3" >


				<h1>Inscription sur le site</h1>

				{{ form_start(form) }}
				
				{{form_row(form.firstName,{'label':false,'attr':{'placeholder':"Entrer votre pr√©nom"}})}}
				{{form_row(form.lastName,{'label':false,'attr':{'placeholder':"Entrer votre nom"}})}}
				{{form_row(form.email,{'label':false,'attr':{'placeholder':"Entrer votre email"}})}}
				{{form_row(form.picture,{'label':false,'attr':{'placeholder':"Entrer une url (avatar)"}})}}
				{{form_row(form.hash,{'label':false,'attr':{'placeholder':"Entrer le mot de passe"}})}}
				{{form_row(form.confirm_hash,{'label':false,'attr':{'placeholder':"Confirmer le mot de passe"}})}}
				{{form_row(form.introduction,{'label':false,'attr':{'placeholder':"Entrer l'introduction"}})}}
				{{form_row(form.description,{'label':false,'attr':{'placeholder':"Entrer votre description"}})}}
			
				<button type="submit" class="btn btn-success">Inscription </button>
				{{ form_end(form) }}

			</div>	

		{% endblock %}





